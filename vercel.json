{
  "version": 2,
  "name": "ohnepixel-servers",
  "github": {
    "silent": true
  },
  "builds": [
    { "src": "client/package.json", "use": "@vercel/node" },
    { "src": "server.mjs", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.mjs" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ]
}